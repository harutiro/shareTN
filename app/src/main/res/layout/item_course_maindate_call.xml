<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:padding="0dp"
    card_view:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:paddingLeft="0dp">

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/mainTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="テストコメント"
            android:textColor="@color/textBlock"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toTopOf="@+id/subTextView"
            card_view:layout_constraintEnd_toStartOf="@+id/itemRemoveButton"
            card_view:layout_constraintStart_toEndOf="@+id/iconImageView"
            card_view:layout_constraintTop_toTopOf="@+id/iconImageView" />

        <TextView
            android:id="@+id/subTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="URL"
            android:textColor="@color/textLightGray"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/iconImageView"
            card_view:layout_constraintEnd_toStartOf="@+id/itemRemoveButton"
            card_view:layout_constraintStart_toEndOf="@+id/iconImageView"
            card_view:layout_constraintTop_toBottomOf="@+id/mainTextView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="88dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/iconImageView"
            card_view:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/itemTagChipGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView"
            card_view:layout_constraintVertical_bias="1.0">

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/memoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            card_view:layout_constraintBottom_toTopOf="@+id/itemTagChipGroup"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/imageView"
            card_view:layout_constraintTop_toBottomOf="@+id/iconImageView"
            card_view:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/itemRemoveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minWidth="48dp"
            android:minHeight="48dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/iconImageView"
            card_view:layout_constraintEnd_toStartOf="@+id/archiveButton"
            card_view:layout_constraintTop_toTopOf="@+id/iconImageView"
            card_view:srcCompat="@drawable/delete_black_24dp__1_"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/archiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minWidth="48dp"
            android:minHeight="48dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/iconImageView"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/iconImageView"
            card_view:srcCompat="@drawable/archive_black_24dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
