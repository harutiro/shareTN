<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintEditTag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/itemEditTagText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:gravity="start|top"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:scrollbars="vertical"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dellEditButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/dellEditButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemEditTagText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemEditTagText"
        app:srcCompat="@drawable/delete_black_24dp__1_"
        app:tint="@color/textBlock" />

</androidx.constraintlayout.widget.ConstraintLayout>